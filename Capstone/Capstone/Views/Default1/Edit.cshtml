@model Capstone.Models.appointments_table

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>appointments_table</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment_num)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appointment_num)
            @Html.ValidationMessageFor(model => model.appointment_num)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment_date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appointment_date)
            @Html.ValidationMessageFor(model => model.appointment_date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.appointment_time)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.appointment_time)
            @Html.ValidationMessageFor(model => model.appointment_time)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.user_num_request, "users_table")
        </div>
        <div class="editor-field">
            @Html.DropDownList("user_num_request", String.Empty)
            @Html.ValidationMessageFor(model => model.user_num_request)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.service_reason)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.service_reason)
            @Html.ValidationMessageFor(model => model.service_reason)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.approved)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.approved)
            @Html.ValidationMessageFor(model => model.approved)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
